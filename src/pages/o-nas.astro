<style>
  .about-hero {
    position: relative;
    padding-block: 8rem 4rem;
    overflow: hidden;
  }

  .about-hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    background: radial-gradient(circle at 70% 30%, rgba(254, 107, 0, 0.05) 0%, transparent 50%),
                linear-gradient(180deg, #ffffff 0%, #f8faff 100%);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .breadcrumb a {
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .breadcrumb a:hover {
    color: var(--color-accent);
  }

  .page-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1.5rem;
    color: var(--color-text);
  }

  .lead {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    color: var(--color-text-muted);
    max-width: 600px;
    line-height: 1.7;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  .content-card {
    padding: 1.5rem;
    height: 100%;
  }

  .content-card h2 {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 1.5rem;
    color: var(--color-text);
  }

  .content-card p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    color: var(--color-text-muted);
  }

  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--glass-border);
  }

  .highlight-item {
    text-align: center;
  }

  .highlight-icon {
    font-family: var(--font-display);
    font-size: 2.25rem;
    font-weight: 800;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
    text-shadow: 0 4px 12px rgba(254, 107, 0, 0.15);
  }

  .highlight-item p {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
    color: var(--color-text-muted);
  }

  .about-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .machinery-card, .unique-service {
    padding: 2.5rem;
  }

  .about-sidebar h3 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 1.5rem;
    color: var(--color-text);
  }

  .machinery-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .machinery-list li {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .machinery-list .icon {
    font-size: 1.5rem;
    flex-shrink: 0;
    padding-top: 0.125rem;
  }

  .machinery-list strong {
    display: block;
    font-size: 1rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .machinery-list p {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.4;
  }

  .unique-service p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-muted);
    margin: 0;
  }

  .about-cta {
    background: #f8faff;
    border-top: 1px solid var(--glass-border);
    border-bottom: 1px solid var(--glass-border);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    padding: 1.125rem 2.5rem;
    border-radius: var(--radius-xl);
    font-weight: 700;
    transition: all var(--transition-base);
    margin-top: 2rem;
    font-size: 1.05rem;
  }

  .cta-button.primary {
    background: var(--gradient-primary);
    color: white;
    box-shadow: 0 8px 30px rgba(254, 107, 0, 0.25);
  }

  .cta-button.primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(254, 107, 0, 0.35);
    color: white;
  }

  @media (min-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr 380px;
    }
  }

  @media (max-width: 640px) {
    .highlights-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
