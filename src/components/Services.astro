<section class="section services" id="uslugi">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Czym się <span class="gradient-text">zajmujemy</span></h2>
      <p class="section-lead">Kompleksowa obsługa firm i klientów indywidualnych w zakresie szeroko pojętej reklamy wizualnej.</p>
    </div>
    <ul class="services-grid">
      {services.map((s, index) => (
        <li style={`animation-delay: ${index * 0.05}s`}>
          <a href={`/uslugi/${s.slug}/`} class="service-card glass-card">
            <div class="service-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <Fragment set:html={iconSvg[s.icon] || iconSvg.box} />
              </svg>
            </div>
            <span class="service-title">{s.title}</span>
            <svg class="service-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    margin: 0 0 1rem;
    color: var(--color-text);
  }

  .section-lead {
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .services-grid {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
  }

  .services-grid li {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
  }

  .service-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    color: var(--color-text);
    font-weight: 600;
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--gradient-primary);
    opacity: 0;
    transition: opacity var(--transition-base);
    z-index: -1;
  }

  .service-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent);
    box-shadow: 0 12px 40px rgba(254, 107, 0, 0.12);
  }

  .service-card:hover::before {
    opacity: 0.1;
  }

  .service-icon {
    width: 3.5rem;
    height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(254, 107, 0, 0.08);
    color: var(--color-accent);
    border-radius: var(--radius-xl);
    flex-shrink: 0;
    transition: all var(--transition-base);
  }

  .service-card:hover .service-icon {
    background: var(--gradient-primary);
    color: white;
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(254, 107, 0, 0.2);
  }

  .service-title {
    flex: 1;
    font-size: 1.1rem;
    color: var(--color-text);
  }

  .service-arrow {
    color: var(--color-accent);
    opacity: 0.4;
    transition: all var(--transition-base);
    flex-shrink: 0;
  }

  .service-card:hover .service-arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  @media (min-width: 640px) {
    .services-grid {
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 1.5rem;
    }
  }
</style>
