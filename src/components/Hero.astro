---
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const { title, subtitle = "Kompleksowa reklama wizualna – pylony, totemy, kasetony z dibondu, szyldy, oklejanie witryn i samochodów.", ctaText = "Skontaktuj się", ctaHref = "/kontakt/" } = Astro.props;
---
<section class="hero">
  <div class="hero-bg" aria-hidden="true">
    <div class="hero-gradient"></div>
    <div class="hero-glow"></div>
  </div>
  <div class="container hero-inner">
    <div class="hero-content fade-in">
      <h1 class="hero-title">
        {title.split(' ').map((word, i) =>
          i === title.split(' ').length - 2 ?
            <span class="gradient-text">{word} </span> :
            <span>{word} </span>
        )}
      </h1>
      {subtitle && <p class="hero-subtitle">{subtitle}</p>}
      {ctaText && ctaHref && (
        <a href={ctaHref} class="hero-cta">
          {ctaText}
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4.16669 10H15.8334M15.8334 10L10 4.16669M15.8334 10L10 15.8334" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    padding-block: 6rem 4rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(245, 158, 11, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
      linear-gradient(180deg, var(--color-bg-start) 0%, var(--color-bg-end) 100%);
    animation: gradientShift 15s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  .hero-glow {
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(245, 158, 11, 0.2) 0%, transparent 70%);
    filter: blur(60px);
    animation: float 8s ease-in-out infinite;
  }

  .hero-inner {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 900px;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 7vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1.5rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .hero-title .gradient-text {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 0 2.5rem;
    line-height: 1.7;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: var(--gradient-primary);
    color: var(--color-bg);
    font-weight: 700;
    font-size: 1.05rem;
    border-radius: var(--radius-xl);
    transition: all var(--transition-base);
    box-shadow: 0 4px 20px rgba(245, 158, 11, 0.3);
    position: relative;
    overflow: hidden;
  }

  .hero-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, transparent 100%);
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(245, 158, 11, 0.5);
    color: var(--color-bg);
  }

  .hero-cta:hover::before {
    opacity: 1;
  }

  .hero-cta svg {
    transition: transform var(--transition-base);
  }

  .hero-cta:hover svg {
    transform: translateX(4px);
  }

  @media (min-width: 768px) {
    .hero {
      min-height: 90vh;
      padding-block: 8rem 6rem;
    }
  }
</style>
